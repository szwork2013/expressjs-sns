                </div>
                <div class="reply-meta">
                    <ul>
                        <li>
                        <a href="javascript:void(0);" class="reply-reply"><i class="fa fa-reply"></i>回复</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {{/hotreplys}}
    </div>
    {{/hotreplys.length}}
