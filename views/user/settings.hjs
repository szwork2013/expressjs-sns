<div class="settings">
    <form action="/user/{{user.name}}/save-settings" enctype="multipart/form-data" method="post">
        <div class="row">
            <label>上传头像</label>
            <input name="avatar" type="file" accept="image/*" id="take-avatar"></input>
        </div>
        <div class="row">
            <button type="submit">提交</button>
        </div>
    </form>
</div>

<script>
    (function(){
     $('#take-avatar').change(function(e){
            var files = e.target.files;
            if (files && files.length > 0) {
                file = files[0];
                var fileReader = new FileReader();
                fileReader.onload = function (event) {
                    
                $('#take-avatar').after($('<img id="show-avatar">').attr('src',event.target.result));
                };
                fileReader.readAsDataURL(file);
            }
         })
    })()
</script>
